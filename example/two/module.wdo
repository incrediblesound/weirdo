@ErrorHandler

Init [..][..]{
	Self = {processError: ''}
}

.processError[Val][input]{
	Self = 'Your input string: \"'+ input.get() + '\" could not be processed';
}

@Looper

Init [..][..]{
	Self = {action: ''};
}

.action[..][->]{
	<- Self;
}

.action[..][n]{
	Self = "You typed: " + n.get();
}

.checkExit[..][x]{

	input = x.get();

	if(input === "help") ->

		@warn(x);
		<- false;

	elif(input !== "quit") ->

		<- true;

	else ->

		<- false;
	if;
}